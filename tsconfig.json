{
  "compilerOptions": {
      "baseUrl": ".",
      "outDir": "./dist",
      "module": "commonjs", 
      "target": "ESNext",  
      "moduleResolution": "node",
      
      "noImplicitAny": false,
      "strictNullChecks": true,
      "strict": true,
      "alwaysStrict": true,
      "sourceMap": false,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "pretty": true,
      "listFiles": true,  
      "listEmittedFiles": true, 
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "lib": [
          "esnext"
      ],
      "typeRoots": [
          "./node_modules/@types"
      ],
      "paths": {
          "@/*": ["src/*"]
      }
  },
  "ts-node": {
    "esm": true,
    "transpileOnly": false,
  },
  "include": [
      "src"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts",
      "*.js"
  ]
}
